FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/gas";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 285.65;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    gas
    {
        type            zeroGradient;  // Parois adiabatiques
    }
    gas_to_box_xmin
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        value           $internalField;
        kappaMethod     fluidThermo;
        Tnbr            T;
    }
    gas_to_sphere
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        value           $internalField;
        kappaMethod     fluidThermo;
        Tnbr            T;
    }
    gas_to_box_xmax
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        value           $internalField;
        kappaMethod     fluidThermo;
        Tnbr            T;
    }
}

