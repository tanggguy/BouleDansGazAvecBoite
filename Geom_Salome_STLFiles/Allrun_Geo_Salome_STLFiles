#!/bin/sh

cd ${0%/*} || exit 1

. $WM_PROJECT_DIR/bin/tools/RunFunctions

echo "Salome...."
# Lancement de Salome en mode terminal (-t) pour exécuter le script Python
$HOME/Salome/SALOME-9.15.0/run_salome.sh -t __MAIN__Geom_salome.py
echo "********************************************************************"

# Fichiers STL générés par le script Salome :
# - gas.stl          : région gaz (fluide)
# - sphere.stl       : sphère centrale (solide)
# - box_xmin.stl     : mur gauche / source chaude (solide)
# - box_xmax.stl     : mur droit / puits froid (solide)
# - external_box_xmin.stl : face externe du mur gauche (patch)
# - external_box_xmax.stl : face externe du mur droit (patch)

# Les fichiers sont gardés séparés pour permettre des conditions limites
# différentes sur chaque région (températures différentes sur box_xmin et box_xmax)

echo "STL files generated:"
ls -la ../constant/triSurface/*.stl 2>/dev/null || echo "Warning: No STL files found!"

