FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      singleGraph;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Profil de température le long de X dans la sphère
// Ligne passant par le centre (Y=Z=Center)

type            sets;
libs            (sampling);

region          sphere;

writeControl    writeTime;

interpolationScheme cellPoint;

setFormat       csv;

sets
(
    line
    {
        type    uniform;
        axis    x;
        start   (X_START_SPHERE Y_CENTER Z_CENTER);
        end     (X_END_SPHERE Y_CENTER Z_CENTER);
        nPoints 50;
    }
);

fields          (T);

