FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      singleGraph;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Profil de température le long de X dans le gaz
// Ligne passant par le centre (Y=Z=Center)
// Note: Cette ligne traverse le gaz des deux côtés de la sphère

type            sets;
libs            (sampling);

region          gas;

writeControl    writeTime;

interpolationScheme cellPoint;

setFormat       csv;

sets
(
    line
    {
        type    lineUniform;
        axis    x;
        start   (X_START_GAS Y_CENTER Z_CENTER);
        end     (X_END_GAS Y_CENTER Z_CENTER);
        nPoints 100;
    }
);

fields          (T);

