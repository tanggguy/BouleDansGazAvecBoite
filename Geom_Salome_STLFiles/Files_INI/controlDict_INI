FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     chtMultiRegionFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         200;

deltaT          0.1;

writeControl    adjustableRunTime;

writeInterval   50;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

maxCo           5.0;

maxDi           100.0;

adjustTimeStep  on;


functions
{
    // ============================================================
    // SONDES DE TEMPERATURE (Probes)
    // ============================================================
    
    #includeFunc "Probes_Sphere"
    #includeFunc "Probes_Gas"
    
    // ============================================================
    // PROFILS DE TEMPERATURE le long de X (singleGraph)
    // ============================================================
    
    #includeFunc "XGraph_Sphere"
    #includeFunc "XGraph_Gas"
    #includeFunc "XGraph_BoxXmin"
    #includeFunc "XGraph_BoxXmax"
    
    // ============================================================
    // COUPES 2D (Slices) - Pour visualisation ParaView
    // ============================================================
    
    #includeFunc "Slice_YCenter_Gas"
    #includeFunc "Slice_ZCenter_Gas"
    
    // ============================================================
    // FLUX DE CHALEUR (Heat Flux)
    // ============================================================
    
    // Flux sur la face externe chaude (entrée de chaleur)
    HeatFlux_box_xmin_external
    {
        type            wallHeatFlux;
        libs            (fieldFunctionObjects);
        patches         (external_box_xmin);
        region          box_xmin;
        executeControl  writeTime;
        writeControl    writeTime;
    }

    // Flux sur la face externe froide (sortie de chaleur)
    HeatFlux_box_xmax_external
    {
        type            wallHeatFlux;
        libs            (fieldFunctionObjects);
        patches         (external_box_xmax);
        region          box_xmax;
        executeControl  writeTime;
        writeControl    writeTime;
    }

    // Flux sur l'interface gaz-sphère (côté gaz)
    HeatFlux_gas_to_sphere
    {
        type            wallHeatFlux;
        libs            (fieldFunctionObjects);
        patches         (gas_to_sphere);
        region          gas;
        executeControl  writeTime;
        writeControl    writeTime;
    }
    
    // ============================================================
    // RESIDUS MULTI-REGIONS
    // ============================================================
    
    gas_residuals
    {
        type            solverInfo;
        libs            (utilityFunctionObjects);
        fields          (".*");
        region          gas;
    }

    sphere_residuals
    {
        type            solverInfo;
        libs            (utilityFunctionObjects);
        fields          (".*");
        region          sphere;
    }

    box_xmin_residuals
    {
        type            solverInfo;
        libs            (utilityFunctionObjects);
        fields          (".*");
        region          box_xmin;
    }

    box_xmax_residuals
    {
        type            solverInfo;
        libs            (utilityFunctionObjects);
        fields          (".*");
        region          box_xmax;
    }
}


// ************************************************************************* //
