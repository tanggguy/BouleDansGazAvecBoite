FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    object          snappyHexMeshDict;
}

castellatedMesh on;

snap            on;

addLayers       on;

castellatedMeshControls
{
    maxLocalCells   100000;
    maxGlobalCells  100000000;
    minRefinementCells 10;
    maxLoadUnbalance 0.1;
    nCellsBetweenLevels 3;
    resolveFeatureAngle 30;
    allowFreeStandingZoneFaces true;
    features        ( { file "gas.eMesh" ; level 1 ; } { file "sphere.eMesh" ; level 1 ; } );
    refinementSurfaces
    {
        gas
        {
            level           ( 0 0 );
        }
        sphere
        {
            level           ( 0 0 );
        }
        box_xmin
        {
            level           ( 0 0 );
        }
        box_xmax
        {
            level           ( 0 0 );
        }
        external_box_xmin
        {
            level           ( 0 0 );
        }
        external_box_xmax
        {
            level           ( 0 0 );
        }
    }
    refinementRegions
    {
    }
    locationsInMesh ( ( ( 0.01 0.01 0.01 ) gas ) ( ( 0.05 0.05 0.05 ) sphere ) ( ( -0.006 0.05 0.05 ) box_xmin ) ( ( 0.105 0.05 0.05 ) box_xmax ) );
}

snapControls
{
    nSmoothPatch    3;
    tolerance       2;
    nSolveIter      30;
    nRelaxIter      5;
    nFeatureSnapIter 10;
    explicitFeatureSnap false;
    multiRegionFeatureSnap true;
    implicitFeatureSnap true;
}

addLayersControls
{
    featureAngle    100;
    slipFeatureAngle 30;
    nLayerIter      50;
    nRelaxedIter    20;
    nRelaxIter      5;
    nGrow           0;
    nSmoothSurfaceNormals 1;
    nSmoothNormals  3;
    nSmoothThickness 10;
    maxFaceThicknessRatio 0.5;
    maxThicknessToMedialRatio 0.3;
    minMedialAxisAngle 90;
    nMedialAxisIter 10;
    nBufferCellsNoExtrude 0;
    additionalReporting false;
    relativeSizes   true;
    layers
    {
        "sphere_.*"
        {
            nSurfaceLayers  2;
        }
    }
    expansionRatio  1.1;
    finalLayerThickness 0.3;
    minThickness    0.1;
}

meshQualityControls
{
    maxNonOrtho     65;
    maxBoundarySkewness 20;
    maxInternalSkewness 4;
    maxConcave      80;
    minVol          1e-13;
    minTetQuality   1e-15;
    minArea         -1;
    minTwist        0.02;
    minDeterminant  0.001;
    minFaceWeight   0.05;
    minVolRatio     0.01;
    minTriangleTwist -1;
    nSmoothScale    4;
    errorReduction  0.75;
}

debug           0;

mergeTolerance  1e-06;

geometry
{
    gas.stl
    {
        type            triSurfaceMesh;
        name            gas;
    }
    sphere.stl
    {
        type            triSurfaceMesh;
        name            sphere;
    }
    box_xmin.stl
    {
        type            triSurfaceMesh;
        name            box_xmin;
    }
    box_xmax.stl
    {
        type            triSurfaceMesh;
        name            box_xmax;
    }
    external_box_xmin.stl
    {
        type            triSurfaceMesh;
        name            external_box_xmin;
    }
    external_box_xmax.stl
    {
        type            triSurfaceMesh;
        name            external_box_xmax;
    }
}


