FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      probes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Sondes de température dans le gaz (fluide)
// Placées le long de l'axe X au centre (Y=Z=Center)

#includeEtc "caseDicts/postProcessing/probes/probes.cfg"

region gas;

fields (T);

writeControl    timeStep;
writeInterval   50;

probeLocations
(
    (0.01000 0.05000 0.05000)  // Milieu gaz côté chaud (entre box_xmin et sphère)
    (0.09000 0.05000 0.05000)  // Milieu gaz côté froid (entre sphère et box_xmax)
);

