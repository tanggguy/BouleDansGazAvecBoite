FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      probes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Sondes de température dans la sphère (solide)
// Placées le long de l'axe X au centre (Y=Z=Center)

#includeEtc "caseDicts/postProcessing/probes/probes.cfg"

region sphere;

fields (T);

writeControl    timeStep;
writeInterval   50;

probeLocations
(
    (0.02100 0.05000 0.05000)  // Interface entrée (côté chaud)
    (0.05000 0.05000 0.05000)  // Centre de la sphère
    (0.07900 0.05000 0.05000)  // Interface sortie (côté froid)
);

