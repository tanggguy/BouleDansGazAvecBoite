// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Coupe 2D dans le plan Y = Center (vue de face XZ)
// Pour visualisation du champ de temp√©rature

type            surfaces;
libs            (sampling);

region          REGION_NAME;

writeControl    writeTime;

interpolationScheme cellPoint;

surfaceFormat   vtk;

surfaces
(
    slice_Y_center
    {
        type            plane;
        point           (0 Y_CENTER 0);
        normal          (0 1 0);
        interpolate     true;
    }
);

fields          (T);

